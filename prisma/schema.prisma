model User {
  id            Int         @id @default(autoincrement())
  createdAt     DateTime    @default(now()) @map(name: "created_at")
  updatedAt     DateTime    @updatedAt @map(name: "updated_at")
  email         String      @unique
  frequency     Frequency
  type          AlertType[]
}

enum Frequency {
  once
  twice
}

enum AlertType {
  lt10sats
  gt10sats
  lt50sats
  gt50sats
}